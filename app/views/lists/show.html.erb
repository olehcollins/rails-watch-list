<div class="list-box">
  <h1>Lists#show</h1>
    <div class="list-card">
      <div class="jumbotron">
        <h3 class="display-4 title">
          <%= @list.name %>
          <%=link_to 'delete', class: 'btn btn-danger'%>
        </h3>
        <p class="lead">
          Watch Movies
        </p>
        <hr class="my-4">
        <br>
        <div class="rating-box">
          <%=link_to 'Back', lists_url, class: 'btn btn-danger'%>
        </div>
      </div>
    </div>
</div>

<div class="movies-box">
  <h1>moviess#index</h1>
  <%@movies.each do |movie|%>
    <div class="movie-card">
      <div class="jumbotron">
        <h3 class="display-4 title">
          <%= movie.title %>
          <%=link_to 'show', list_movie_url(movie), class: 'btn btn-primary'%>
        </h3>
        <p class="lead">
          address: <i class="overview"><%= movie.overview %></i><br>
          contact: <i class="poster"><%= movie.poster_url %></i>
        </p>
        <br>
        <div class="rating-box">
          <div class="average-reviews btn btn-success">Rating: <%= movie.rating %></div>
        </div>
      </div>
    </div>
    <hr class="my-4">
  <%end%>
</div>
